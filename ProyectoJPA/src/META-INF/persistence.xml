<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Practica3" transaction-type="RESOURCE_LOCAL">
		<class>Entidades.Actividad</class>
		<class>Entidades.Alumno</class>
		<class>Entidades.EstadoActividad</class>
		<class>Entidades.EstadoActividadKey</class>
		<class>Entidades.Informe</class>
		<class>Entidades.ONG</class>
		<class>Entidades.Pas</class>
		<class>Entidades.Pdi</class>
		<class>Entidades.Usuario</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>		
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sii"/>
			<property name="javax.persistence.jdbc.user" value="siiuser"/>
			<property name="javax.persistence.jdbc.password" value="siipassword"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="eclipselink.jdbc.exclusive-connection.mode" value="Always"/>
		</properties>	
	</persistence-unit>
</persistence>
